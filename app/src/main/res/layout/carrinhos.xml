<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="80dip">

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/carrinho"
        android:layout_toStartOf="@+id/carrinho"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/carrinho"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_flecha_direita" />

    <TextView
        android:id="@+id/bairro"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/nome"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nome"
        android:layout_below="@+id/nome"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/carrinho"
        android:layout_toStartOf="@+id/carrinho"
        android:text="bairro"
        android:textSize="20dp" />


</RelativeLayout>