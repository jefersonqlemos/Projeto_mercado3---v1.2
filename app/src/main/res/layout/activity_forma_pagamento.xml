<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clienet.projeto_mercado3.FormaPagamentoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher_entrega2" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher_resumo2" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher_pagamento" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Entrega"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="#c0c0c0" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resumo"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="#c0c0c0" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pagamento"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#009688"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forma de Pagamento"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/boleto"
            android:layout_margin="20dp"
            android:id="@+id/radioGroup">


            <RadioButton
                android:id="@+id/boleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boleto Bancario"
                android:layout_marginBottom="10dp"
                android:enabled="true"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cartão de Crédito"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <!--<RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Débito Online"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>-->

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pagar com Pagseguro"
                android:textSize="20dp"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Ao avançar para próxima etapa o numero do seu pedido é gerado, caso deseja voltar, você será direcionado ao pedido gerado em 'meus pedidos'" />

        <Button
            android:id="@+id/continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="50dp"
            android:background="@color/corprimaria"
            android:text="CONTINUAR"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_margin="20dp"/>

    </LinearLayout>

</ScrollView>
